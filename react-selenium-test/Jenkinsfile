pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out repository...'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('react-selenium-test') {
                    echo 'Installing npm dependencies...'
                    bat 'npm install'
                }
            }
        }

        stage('Run React Build') {
            steps {
                dir('react-selenium-test') {
                    echo 'Building React app...'
                    bat 'npm run build'
                }
            }
        }

        stage('Run Selenium Tests') {
            steps {
                dir('react-selenium-test/tests') {
                    echo 'Running Selenium UI tests...'
                    bat 'npx mocha uiTest.js'
                }
            }
        }
    }

    post {
        success {
            echo '✅ React + Selenium pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed. Check logs for errors.'
        }
    }
}
